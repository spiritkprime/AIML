# AI Travel Planner Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Flight APIs
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
SKYSCANNER_API_KEY=your_skyscanner_api_key_here
GOOGLE_FLIGHTS_API_KEY=your_google_flights_api_key_here

# Hotel APIs (via RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key_here

# Weather APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHERAPI_API_KEY=your_weatherapi_key_here

# Map APIs
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration (if using)
DATABASE_URL=your_database_url_here

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_FLIGHTS=1800
CACHE_TTL_HOTELS=3600
CACHE_TTL_WEATHER=1800
CACHE_TTL_ITINERARIES=7200

# External API Timeouts (in milliseconds)
API_TIMEOUT_FLIGHTS=10000
API_TIMEOUT_HOTELS=15000
API_TIMEOUT_WEATHER=10000
API_TIMEOUT_AI=30000

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_KEY=your_analytics_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Feature Flags
ENABLE_AI_ITINERARIES=true
ENABLE_REAL_TIME_PRICING=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_MAP_INTEGRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Development Settings
DEBUG=true
ENABLE_MOCK_DATA=true
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
